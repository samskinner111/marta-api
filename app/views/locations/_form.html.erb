<%= form_with(model: location, local: true) do |form| %>
  <% if location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
      <% location.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :address, 
      placeholder: "Address or Approximate Location", autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_field :city, placeholder: "City", class: "form-control" %>
  </div>

  <br>
  <%= submit_tag "Submit Your Location", class: "btn btn-success" %>
<% end %>